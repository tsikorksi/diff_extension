{
  "name": "Diff Checker",
  "version": "1.0.0",
  "description": "prevent tabnabbing",
  "manifest_version": 3,
  "author": "Tadeusz Sikorski",
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {},
  "permissions": ["tabs", "activeTab", "alarms"],
  "host_permissions": [
    "http://*/*",
    "https://*/*",
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["https://*/*"],
      "js": ["contentScript.js"]
    }
  ]
}